local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/refs/heads/main/Source"))()
local Window = Library.CreateLib("MM2 Menu", "DarkTheme")

-- Main Menu
local MainTab = Window:NewTab("Main")
local MainSection = MainTab:NewSection("Main Functions")

-- Speed Hack Function
MainSection:NewSlider("Speed", "Set your speed", 64, 16, function(value)
    local player = game.Players.LocalPlayer
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = value
    end
end)

-- Scripts Menu
local ScriptsTab = Window:NewTab("Scripts")
local ScriptsSection = ScriptsTab:NewSection("Script Functions")

-- Button to run Aimbot and ESP script
ScriptsSection:NewButton("ðŸŽ† rtrix aimbot fan version ðŸŽ†", "Activates Aimbot and ESP", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/NIKITA12340-sudo/dermo/refs/heads/Script/aimbot%20and%20esp"))()
end)

-- Button to run Fly script
ScriptsSection:NewButton("Fly Script", "Activates the fly script", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
end)

-- Misc Menu
local MiscTab = Window:NewTab("Misc")
local MiscSection = MiscTab:NewSection("Misc Functions")

-- Creator Info
MiscSection:NewLabel("Creator: NIKITA12340")

-- Destroy Hub Function
MiscSection:NewButton("Destroy Hub", "Removes the menu and disables all functions", function()
    Library:Destroy()
end)

